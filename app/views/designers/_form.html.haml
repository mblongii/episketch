= form_for @designer do |f|
  - if @designer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@designer.errors.count, "error")} prohibited this designer from being saved:"
      %ul
        - @designer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
