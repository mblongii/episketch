= form_for @designer do |f|
  - if @designer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@designer.errors.count, "error")} prohibited this designer from being saved:"
      %ul
        - @designer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  / .field
  /   = f.label :avatar_url
  /   = f.text_field :avatar_url
  / .field
  /   = f.label :auth_token
  /   = f.text_field :auth_token
  / .field
  /   = f.label :storyboard_id
  /   = f.number_field :storyboard_id
  / .field
  /   = f.label :viewing_storyboard_id
  /   = f.number_field :viewing_storyboard_id
  .actions
    = f.submit 'Save'
